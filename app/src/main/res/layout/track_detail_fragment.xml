<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.findmypackage.ui.track.detail.TrackDetailViewModel"/>
    </data>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c1"
            android:orientation="vertical"
            android:paddingTop="10dp"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                >

                <TextView
                    style="@style/EditText"
                    android:layout_width="match_parent"
                    android:textColor="@color/f1"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="3"
                    android:singleLine="false"
                    android:text="@{vm.lvTrackEntity.itemName}"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                >

                <TextView
                    style="@style/EditText"
                    android:textColor="@color/f1"
                    android:textSize="14sp"
                    android:text="@{vm.lvTrackEntity.carrierName}"
                    android:hint="@string/carrier_name"
                    />

                <TextView
                    style="@style/EditText"
                    android:textColor="@color/f1"
                    android:textSize="16sp"
                    android:text="@{vm.lvTrackEntity.trackId}"
                    android:textStyle="bold"
                    android:hint="@string/track_id"
                    android:layout_marginLeft="5dp"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                >

                <TextView
                    style="@style/EditText"
                    android:text="@{vm.lvTrackData.From.name}"
                    android:textColor="@color/f1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:hint="발송인" />

                <TextView
                    style="@style/EditText"
                    android:text="님 으로부터"
                    android:textColor="@color/f1"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                >

                <TextView
                    style="@style/EditText"
                    android:textColor="@color/f1"
                    android:text="@{vm.lvTrackData.To.name}"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:hint="수취인" />

                <TextView
                    style="@style/EditText"
                    android:text="님 께"
                    android:textColor="@color/f1"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/f1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/f1"
                app:stackFromEnd="true"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                items="@{vm.lvTrackData.progresses}"
                viewModel="@{vm}"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

</layout>