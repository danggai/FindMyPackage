<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.findmypackage.ui.trackAdd.TrackAddViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_body"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="20dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <GridView
                android:id="@+id/gv_carriers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                viewModel="@{vm}"
                items="@{vm._lvCarrierList}"
                clearItem="@{vm.lvClearItem}"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/tv_post_num"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@{vm.lvPostNum}"
                android:textSize="20sp"
                android:hint=""
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/gv_carriers"
                app:layout_constraintLeft_toLeftOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="search"
                android:textAllCaps="false"
                android:onClick="@{(v)->vm.onClick(v)}"
                app:layout_constraintTop_toBottomOf="@id/tv_post_num"
                app:layout_constraintLeft_toLeftOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>